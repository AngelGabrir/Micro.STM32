/* USER CODE BEGIN Header_StartServo */
/**
 * @brief  Function implementing the Servo thread.
 * @param  argument: Not used
 * @retval None
 */
/* USER CODE END Header_StartServo */
void StartServo(void const * argument)
{
  /* USER CODE BEGIN 5 */


	/* Infinite loop */
	for (;;) {

			scroll_char(27, 200, left);




		/*	htim2.Instance->CCR1 = 500;
			osDelay(500);
			htim2.Instance->CCR1 = 1500;
			osDelay(500);
			htim2.Instance->CCR1 = 2500;
			osDelay(500);
		}
		osDelay(10);*/
	}
	osDelay(1);
  /* USER CODE END 5 */
}

/* USER CODE BEGIN Header_StartStepper */
/**
 * @brief Function implementing the Stepper thread.
 * @param argument: Not used
 * @retval None
 */
/* USER CODE END Header_StartStepper */
void StartStepper(void const * argument)
{
  /* USER CODE BEGIN StartStepper */

	/* Infinite loop */
	for (;;) {
			      step(25, 0, 10); // 25 steps (45 degrees) CCV
			      osDelay(500);

			    step(800, 1, 10); // 800 steps (4 revolutions ) CV
			    osDelay(500);


		//HAL_GPIO_TogglePin(GPIOB, GPIO_PIN_13);
		//osDelay(200);
		//scroll_char(27, 200, left);
		//osDelay(100);
		// stepper_step_angle(90, 0, 13);
		// osDelay(100);
		//stepper_step_angle(180, 0, 13);

	}
//	osDelay(1);
  /* USER CODE END StartStepper */
}

